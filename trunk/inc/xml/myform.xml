<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE forms SYSTEM "../dtd/forms.dtd">
<forms>
	<form>
		<action>www.soydewilde.com.ar</action>
		<fields>
			<field>
				<type>text</type>
				<name>email</name>
				<label>Email</label>
				<validations>
					<validation>required</validation>
					<validation>email</validation>
				</validations>
			</field>
			<field>
				<type>select</type>
				<name>temperaturas</name>
				<label>Select</label>
				<options>
					<option>
						<value>1</value>
						<label>frio</label>
					</option>
					<option>
						<value>2</value>
						<label>tibio</label>
					</option>
					<option>
						<value>3</value>
						<label>caliente</label>
					</option>
				</options>
			</field>
			<field>
				<type>radio</type>
				<name>numeros</name>
				<label>Radio Buttons</label>
				<options>
					<option>
						<value>10</value>
						<label>diez</label>
					</option>
					<option>
						<value>20</value>
						<label>veinte</label>
					</option>
					<option>
						<value>30</value>
						<label>treinta</label>
					</option>
				</options>
			</field>
			<field>
				<type>checkboxes</type>
				<name>colores</name>
				<label>Checkboxes</label>
				<options>
					<option>
						<value>1</value>
						<label>verde</label>
					</option>
					<option>
						<value>2</value>
						<label>azul</label>
					</option>
					<option>
						<value>3</value>
						<label>rojo</label>
					</option>
				</options>
			</field>
		</fields>
	</form>
</forms>
